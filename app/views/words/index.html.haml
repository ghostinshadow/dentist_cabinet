%h1 Listing words

%table
  %thead
    %tr
      %th Dictionary
      %th Title
      %th Body
      %th
      %th
      %th

  %tbody
    - @words.each do |word|
      %tr
        %td= word.dictionary_id
        %td= word.title
        %td= word.body
        %td= link_to 'Show', word
        %td= link_to 'Edit', edit_word_path(word)
        %td= link_to 'Destroy', word, :method => :delete, :data => { :confirm => 'Are you sure?' }

