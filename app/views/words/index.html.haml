%h3= @dictionary.title

%table.table
  %thead
    %tr
      %th Слово
      %th
      %th

  %tbody
    - @words.each do |word|
      %tr
        %td= word.body
        %td= link_to 'Змінити', edit_word_path(word, dictionary_id: @dictionary.id)
        %td= link_to 'Видалити', word_path(word, dictionary_id: @dictionary.id), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'Нове слово', new_dictionary_word_path(@dictionary), class: "btn btn-success"

= link_to 'Назад', dictionaries_path, class: 'btn btn-danger'

